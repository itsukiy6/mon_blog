{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ article.titre }}</h1>   
    <hr>

    {{ article.contenu|raw }}

    <h2 class="comment-title mt-5">
        <span class="comment-count">
            {{ article.commentaires|length }}
        </span> commentaire(s)
    </h2>

    <hr>

    <div class="comment-area mb-5">
        {{ form(commentForm, { 'attr': { 'class': 'comment-form'} }) }}
    </div>

    <div class="comment-list">
        {% for comment in article.commentaires %}
            {% include 'commentaire/index.html.twig' with [comment] %}
        {% endfor %}
    </div>

</div>
{% endblock %}